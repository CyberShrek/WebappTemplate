{
  "name": "webapp-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "link_webapp_client"       : "npm run link_webapp_client_nodes && npm run link_webapp_client_ts && npm run link_webapp_client_src && npm run link_webapp_client_rollup",
    "link_webapp_client_rollup": "rm -rf rollup.config.js              \n ln -s          ../WebappClient/rollup.config.js rollup.config.js",
    "link_webapp_client_ts"    : "rm -rf tsconfig.json                 \n ln -s          ../WebappClient/tsconfig.json    tsconfig.json",
    "link_webapp_client_nodes" : "rm -rf node_modules                  \n ln -s          ../WebappClient/node_modules     node_modules",
    "link_webapp_client_src"   : "rm -rf src/main/svelte/webapp-client \n ln -s ../../../../WebappClient/src              src/main/svelte/webapp-client",

    "build": "npx rollup -c    --INPUT_DIR=src/main/svelte --OUTPUT_DIR=src/main/webapp/WEB-RES/js/built",
    "dev"  : "npx rollup -c -w --INPUT_DIR=src/main/svelte --OUTPUT_DIR=src/main/webapp/WEB-RES/js/built"
  }
}